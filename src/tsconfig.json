{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "../dist/public",
        "baseUrl": "/",
        "jsx": "react",
        "noImplicitAny": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings/**/*"
        ],
        "esModuleInterop": true
    },
    "include": [
        "./app/**/*",
        "./typings/index.d.ts", "app.tsx", "components/router.tsx", "components"
    ],
    "exclude": [
        "./node_modules",
        "./assets"
    ]
}