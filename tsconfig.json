// tsconfig.json
{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "/",
        "jsx": "react",
        "noImplicitAny": true,
        "typeRoots": ["./src/typings/*.d.ts"]
    },
    "include": [
        "lib/**/*.ts",
        "interfaces"
        // "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/node_modules",
        "dist",
        "src/assets"
    ]
}